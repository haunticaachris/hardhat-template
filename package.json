{
  "name": "hardhat-template",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "accounts": "npx hardhat accounts",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "deploy": "npx hardhat run ./scripts/deploy.js --network main",
    "deploy-local": "npx hardhat run ./scripts/deploy.js --network localhost",
    "format": "npx prettier --write ./",
    "lint": "npx solhint \"./contracts/**/*.sol\"",
    "network": "npx hardhat network",
    "node": "npx hardhat node",
    "test": "npx hardhat test"
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "latest",
    "@nomiclabs/hardhat-waffle": "latest",
    "chai": "latest",
    "dotenv": "latest",
    "ethereum-waffle": "latest",
    "ethers": "latest",
    "hardhat": "latest",
    "hardhat-gas-reporter": "latest",
    "prettier": "latest",
    "prettier-plugin-solidity": "latest",
    "solhint": "latest",
    "solidity-coverage": "latest"
  }
}
